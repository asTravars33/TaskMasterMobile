<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    tools:context=".GroupSessionActivity">
    <TextView
        android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:text="Title"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/background_gif"
        android:layout_marginTop="20dp"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:src="@drawable/study_1"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/chat_heading"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Chat"
        android:textColor="@color/main"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/background_gif"/>
    <ScrollView
        android:id="@+id/chat_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/accent2"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat_heading">
        <LinearLayout
            android:id="@+id/chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/send_message"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat_scroll"
        android:weightSum="1"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/message_text"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.7" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send_button"
            android:onClick="sendMessage"
            android:text="Send"
            android:textColor="@color/white"
            android:background="@color/main"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.3" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/people_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="People"
        app:layout_constraintLeft_toLeftOf="@id/background_gif"
        app:layout_constraintTop_toTopOf="@id/background_gif" />
    <ScrollView
        android:id="@+id/people_list"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.45"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintLeft_toLeftOf="@id/background_gif"
        app:layout_constraintTop_toBottomOf="@id/people_button">
        <LinearLayout
            android:id="@+id/people_list_layout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>